{
  "manifest_version": 2,
  "name": "YouTube Live Alert Pro",
  "version": "1.0",
  "description": "Get notified when any YouTube channel goes live during your preferred hours.",
  "author": "Mohammad Ali Rezaeimanesh & ChatGPT :)",
  "homepage_url": "mailto:rezaiemanesh@chmail.ir",
  "permissions": ["notifications", "storage", "alarms", "tabs"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}